---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import FloatingWhatsApp from '../components/FloatingWhatsApp.astro';
import '../scripts/scroll-animate.ts';

const { title = 'Metálicas y Servicios', description = 'Soluciones en metalmecánica con seriedad y cumplimiento.' } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/logo-metalicas.jpg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="keywords" content="metalicas y servicios, metalmecánica, soluciones en metal" />
		<meta name="theme-color" content="#223f5f" />
	</head>
	<body>
		<Navbar />
		<main>
			<slot />
		</main>
		<Footer />
		<FloatingWhatsApp />
	</body>
</html>
