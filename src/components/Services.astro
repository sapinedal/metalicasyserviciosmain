---
const services: Array<{ title: string; description: string }>= [
	{ title: 'Montajes Estructurales', description: 'Fabricación y montaje de estructuras metálicas con precisión y estándares de seguridad.' },
	{ title: 'Soldadura tig, mig y revestida', description: 'Soluciones de soldadura para acero, inoxidable y aluminio según necesidad.' },
	{ title: 'Rolado de tubos y lamina', description: 'Curvado y rolado para proyectos industriales y arquitectónicos.' },
	{ title: 'Canoas', description: 'Diseño y fabricación de canoas y canales a la medida.' },
	{ title: 'Rejas, Puertas', description: 'Elementos de seguridad y diseño para residencias y empresas.' },
	{ title: 'Carcamanos', description: 'Fabricación robusta y a medida para aplicaciones hidráulicas.' },
	{ title: 'Corte y dobles', description: 'Corte, plegado y conformado con precisión.' },
	{ title: 'Pérgolas', description: 'Estructuras estéticas y funcionales para exteriores.' },
	{ title: 'Pintura Electrostática', description: 'Acabados durables y uniformes para piezas y estructuras.' },
];
---

<section id="servicios" class="py-16 lg:py-24">
	<div class="container-base">
		<h2 class="section-title">Servicios</h2>
		<p class="section-subtitle">Experiencia en metalmecánica para proyectos industriales y residenciales.</p>
		<div class="mt-10 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
			{services.map((s, i) => (
				<div class={`reveal reveal-delay-${(i%4)+1} rounded-xl border border-base-200 bg-white p-6 shadow-sm hover:shadow transition hover:border-accent-300 group`}>
					<h3 class="text-lg font-semibold text-base-900">{s.title}</h3>
					<p class="mt-2 text-sm text-base-600">{s.description}</p>
					<div class="mt-4 h-1 w-12 bg-accent-200 overflow-hidden rounded-full">
						<span class="block h-full w-1/2 bg-accent-500 animate-shimmer"></span>
					</div>
				</div>
			))}
		</div>
	</div>
</section>


